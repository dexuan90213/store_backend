<h1 class="title">商品列表</h1>

<%= link_to '新增商品', new_admin_product_path, class: 'button is-primary' %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th scope="col">商品名稱</th>
      <th scope="col">商品原價</th>
      <th scope="col">商品售價</th>
      <th scope="col">商品狀態</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each_with_index do |product, idx| %>
      <tr>
        <th scope="row"><%= idx += 1 %></th>
        <td><%= link_to product.name, admin_product_path(product) %></td>
        <td><%= product.original_price %></td>
        <td><%= product.sell_price %></td>
        <td><%= product.state %></td>
        <td><%= link_to '編輯', edit_admin_product_path(product), class: 'button is-info' %></td>
        <td><%= link_to '刪除', admin_product_path(product), method: 'delete', data: { confirm: '確定要刪除嗎？' }, class: 'button is-danger' %></td>
        </li>
      </tr>
    <% end %>
  </tbody>
</table>
