<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <h2 class="title">管理員登入</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, '電子郵件', class: 'label' %>
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '請輸入電子郵件', class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, '密碼', class: 'label' %>
        <div class="control">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: '請輸入密碼', class: 'input' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <div class="control">
            <%= f.check_box :remember_me, class: 'checkbox' %>
            <%= f.label :remember_me, '保持登入狀態', class: 'checkbox' %>
          </div>
        </div>
      <% end %>

      <div class="field">
        <div class="control">
          <%= f.submit '登入', class: 'button is-link is-fullwidth' %>
        </div>
      </div>
    <% end %>

    <%= render "managers/shared/links" %>
  </div>
</div>
